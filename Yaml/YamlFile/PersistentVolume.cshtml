@model Yaml.Infrastructure.Dto.YamlClusterInfoDto
apiVersion: v1
kind: PersistentVolume
metadata:
  name: @Model.AppName-volume
  labels:
    type: local
spec:
  storageClassName: @Model.DiskClass
  capacity:
    storage:  @Model.DiskSize
  accessModes:
    - ReadWriteOnce
  hostPath:
    path: "/mnt/data"